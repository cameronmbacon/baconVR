{
  "name": "baconvr-back",
  "version": "0.1.0",
  "description": "Back End for baconVR application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm run start --prefix client",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "coveralls":
      "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "cover": "istanbul cover _mocha",
    "test": "mocha test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cameronmbacon/baconVR-back.git"
  },
  "keywords": ["Node"],
  "author": "Cameron Bacon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cameronmbacon/baconVR-back/issues"
  },
  "homepage": "https://github.com/cameronmbacon/baconVR-back#readme",
  "dependencies": {
    "body-parser": "^1.18.1",
    "concurrently": "^3.5.0",
    "cookie-session": "^1.3.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "mongoose": "^4.11.11",
    "nodemon": "^1.12.1",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "stripe": "^5.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^2.13.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.3",
    "supertest": "^3.0.0"
  }
}
